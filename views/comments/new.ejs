<% include ../partials/header %>

<div class="container">
    <header id="new_header">
        <h1>添加新评论到<%= campground.name %></h1>
    </header>
    <form id="new_form" action="/campgrounds/<%= campground._id %>/comments" method="POST" >
        <div class="form-group">
            <textarea class="form-control" placeholder="评论内容..." name = "comment[text]"></textarea>
        </div>
       <!-- <div class="form-group">
            <input class="form-control" type="text" placeholder="Author" name = "comment[author]">
        </div>-->
        <div class="form-group">
            <button class="btn btn-success btn-lg btn-block">提交！</button>
        </div>
        <a href="/campgrounds/<%= campground._id %>">返回</a>
    </form>
    
</div>

