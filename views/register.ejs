<% include ./partials/header %>

<div class="container">
    <header id="registerOrLogin_header">
        <h1>YelpCamp Register</h1>
    </header>
    
    <form id="registerOrLogin_form" action="/register" method="POST">
        <label for="username">User Name</label>
        <div class="form-group">
            <input id="username" class="form-control" type="text" name="username">
        </div>
        <label for="password">Pasword</label>
        <div class="form-group">
            <input id="password" class="form-control" type="password" name="password">
        </div>
        <label for="email">Email</label>
        <div class="form-group">
            <input id="email" class="form-control" type="email" name="email">
        </div>
        <label for="adminCode">Admin code(not required)</label>
        <div class="form-group">
            <input id="adminCode" class="form-control" type="text" name="adminCode">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">Sign Up!</button>
        </div>
    </form>
</div>


<% include ./partials/footer %>